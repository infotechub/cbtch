@model MrCMS.Web.Apps.Core.Models.Provider.ProviderVm

@{
    ViewBag.Title = "De-list Provider";
}

 <div class="modal-header">
     <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
     <h4 class="modal-title">De-List Provider</h4>
 </div>
@using (Html.BeginForm("Delete", "ProviderPage", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.Name)
<div class="modal-body" >
 
    <div class="alert alert-danger alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
        <h4><i class="icon fa fa-ban"></i>Alert!</h4>
        Are you sure you want to de-list this Provider (@Html.DisplayFor(x=>x.Name)) ?
        Kindly note that <b>@ViewBag.enrolleecount</b> enrollees are  assigned to use this provider, you need to assign a substitute below.
    </div>

    <table class="table table-condensed table-striped" >

        <tbody>
            <tr>

                <th>Field</th>
                <th>Value</th>

            </tr>
            <tr>
                <td>Name</td>
                <td>@Html.DisplayFor(x=>x.Name)</td>
            </tr>
            <tr>
                <td>Code</td>
                <td>@Html.DisplayFor(x=>x.Code)</td>
            </tr>
            <tr>
                <td>Subcode</td>
                <td>@Html.DisplayFor(x=>x.SubCode)</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>@Html.DisplayFor(x=>x.Email)</td>
            </tr>

            <tr>
                <td>Phone</td>
                <td>@Html.DisplayFor(x=>x.Phone)</td>
            </tr>
            <tr>
                <td>Mobile</td>
                <td>@Html.DisplayFor(x=>x.Phone2)</td>
            </tr>
            <tr>
                <td>Website</td>
                <td>@Html.DisplayFor(x=>x.Website)</td>
            </tr>
            <tr>
                <td>Zone</td>
                <td>@Html.DisplayFor(x=>x.Zone)</td>
            </tr>
            <tr>
                <td>State</td>
                <td>@Html.DisplayFor(x=>x.State.Name)</td>
            </tr>
            <tr>
                <td>LGA</td>
                <td>@Html.DisplayFor(x=>x.Lganame)</td>
            </tr>
            <tr>
                <td>Address</td>
                <td>@Html.DisplayFor(x=>x.Address)</td>
            </tr>
            <tr>
                <td>Services</td>
                <td>@Html.DisplayFor(x=>x.Providerservices)</td>
            </tr>
            <tr>
                <td>Plans</td>
                <td>@Html.DisplayFor(x=>x.Providerplans)</td>
            </tr>
            <tr>
                <td>Alternative Provider</td>
                <td>@Html.DropDownList("provider_alt", new SelectList(ViewBag.providerlist, "Id","Name"), new { @class = "form-control chosen-select", @id = "provider_alt", @multiple = "" })</td>
            </tr>
            <tr>
                <td>Reason for De-List</td>
                <td>@Html.TextAreaFor(x=>x.DelistNote, new { @class = "form-control" })</td>
            </tr>
        </tbody>

    </table>

</div>


<div class="modal-footer">
   
                <button data-dismiss="modal" class="btn btn-default pull-left modal-close-btn" type="button">Cancel</button>
    <button class="btn btn-success" type="submit" id="btnSave">Confirm </button>
   
</div>

}

<script>

    $(function () {

        $('#modal-container').on('shown.bs.modal', function () {
            $('#provider_alt').chosen({
                no_results_text: "Oops, nothing found!",
                width: '100%',
                placeholder_text_multiple: "Select Hospital",
                max_shown_results: 20,
                max_selected_options: 1,

            });

        });

        
   

        $('#btnSave').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
