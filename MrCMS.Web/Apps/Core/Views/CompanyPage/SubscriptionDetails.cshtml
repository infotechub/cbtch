@model MrCMS.Web.Apps.Core.Entities.Subscription

@{
    ViewBag.Title = "Subscription Details";
}

 <div class="modal-header">
     <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
     <h4 class="modal-title">Subscription Details</h4>
 </div>
<div class="modal-body">
    <div class="callout-info callout ">
        <h4>DETAILS FOR  @ViewBag.CompanyName SUBSCRIPTION (@Html.DisplayFor(x=>x.SubscriptionCode)) .</h4>
        <p> </p>
    </div>
    <table class="table table-condensed table-striped">
        <tbody>
            <tr>

                <th>Field</th>
                <th>Value</th>

            </tr>
            <tr>
                <td>Company</td>
                <td>@ViewBag.CompanyName</td>
            </tr>
            <tr>
                <td>Subscription Code</td>
                <td>@Html.DisplayFor(x=>x.SubscriptionCode)</td>
            </tr>
            <tr>
                <td>Subscription Plan(s)</td>
                <td>@ViewBag.Plans</td>
            </tr>
            <tr>
                <td>Start Date</td>
                <td>@Html.DisplayFor(x=>x.Startdate)</td>
            </tr>

            <tr>
                <td>Expiration Date</td>
                <td>@Html.DisplayFor(x=>x.Expirationdate)</td>
            </tr>
            <tr>
                <td>Duration</td>
                <td>@ViewBag.duration</td>
            </tr>
            <tr>
                <td>Note</td>
                <td>@Html.DisplayFor(x=>x.Note)</td>
            </tr>
            <tr>
                <td>Additional Details</td>
                <td>

                    <table class="table table-condensed table-striped">
                        <tr>
                            <td>Created By</td>
                            <td>@ViewBag.createdByStr</td>
                        </tr>
                        <tr>
                            <td>Created On</td>
                            <td>@Html.DisplayFor(x=>x.CreatedOn)</td>
                        </tr>
                        <tr>
                            <td>Authorization Status</td>
                            <td>@ViewBag.AuthorizationStatusStr</td>
                        </tr>
                        <tr>
                            <td>Authorized By</td>
                            <td>@ViewBag.AuthorizedByStr</td>
                        </tr>
                        <tr>
                            <td>Authorization Date</td>
                            <td>@Html.DisplayFor(x=>x.AuthorizedDate)</td>
                        </tr>
                    </table>



                </td>
            </tr>

        </tbody>
    </table>

</div>


<div class="modal-footer">
    <button data-dismiss="modal" class="btn btn-default pull-right modal-close-btn" type="button">Close</button>
</div>



<script>

    $(function () {
        $('#btnSave').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
