@using MrCMS.Helpers
@model MrCMS.Web.Apps.Core.Entities.CompanySubsidiary
@{
    ViewBag.Title = "Delete Subsidiary";
}
 

@using (Html.BeginForm("DeleteSubsidiary","CompanyPage",FormMethod.Post))
    {
      @Html.AntiForgeryToken()
 <div class="modal-header">
     <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
     <h4 class="modal-title">Edit subsidiary</h4>
 </div>
<div class="modal-body">
    <div class="alert alert-danger alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
        <h4><i class="icon fa fa-ban"></i>Alert!</h4>
        Are you sure you want to delete this subsidiary ?
    </div>
    <div class="form-group">
        @Html.HiddenFor(x=>x.Id)
        @Html.HiddenFor(x=>x.ParentcompanyId)
        @Html.Label("Name")
        @Html.DisplayFor( x=>x.Subsidaryname, new { @class = "form-control",@placeholder="Name" })
        @Html.ValidationMessageFor(x=>x.Subsidaryname)
        
    </div>



</div>
<div class="modal-footer">

    <button data-dismiss="modal" class="btn btn-default pull-left modal-close-btn" type="button">Cancel</button>
    <button class="btn btn-primary" type="submit" id="btnSave">Save </button>
</div>

}

<script>

    $(function () {

        //Do validation for yourself.
        $('#btnSave').click(function (e) {

            $('#modal-container').modal('hide');
        });


    });
</script>



