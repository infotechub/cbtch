@using MrCMS.Helpers
@model MrCMS.Web.Apps.Core.Entities.CompanyPlan
@{
    ViewBag.Title = "Edit Company Plan";
}
 

@using (Html.BeginForm("EditCompanyPlan","CompanyPage",FormMethod.Post,new {@id="CompanyPlanform"}))
    {
      @Html.AntiForgeryToken()
  @Html.HiddenFor(x=>x.Id)
 <div class="modal-header">
     <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
     <h4 class="modal-title">Edit company plan</h4>
 </div>
<div class="modal-body">

    <div class="form-group">
        @Html.Label("Company")
                @Html.DropDownList("companyList",new SelectList( ViewBag.Companylistbag, "Id", "Name",Model.Companyid),new { @class = "form-control",@id="companyList"})
        
    </div>


    <div class="form-group">
        @Html.Label("Plan Type")
        @Html.DropDownList("PlanType",new SelectList( ViewBag.PlanTypeList, "Id", "Name",Model.Planid),new { @class = "form-control",@id="PlanType"})
        
    </div>
    <div class="form-group">
        @Html.Label("Company Plan Name")
                @Html.TextBoxFor( x=>x.Planfriendlyname, new { @class = "form-control",@placeholder="Company Plan Name" })
                  @Html.ValidationMessageFor(x=>x.Planfriendlyname)
        
    </div>
    <div class="form-group">
        @Html.Label("Description")
        @Html.TextBoxFor( x=>x.Description, new { @class = "form-control",@placeholder="Company Plan Description" })
        @Html.ValidationMessageFor(x=>x.Description)
        
    </div>
  
 <div class="form-group">
        @Html.Label("Annual Premium Price")
        @Html.TextBox("AnnualPremium",null, new { @class = "form-control",@placeholder="0.00",@type="number" })
        @Html.ValidationMessageFor(x=>x.AnnualPremium)
        
    </div>
    <div class="form-group">
        @Html.Label("Discount Per Enrollee")
        @Html.TextBox("discountEnrollee",0.00, new { @class = "form-control",@placeholder="0.00",@type="number" })
        @Html.ValidationMessageFor(x=>x.Discountperenrollee)
        
    </div>

    <div class="form-group">
        @Html.Label("Discount On Total")
        @Html.TextBox("discountLump",0.00, new { @class = "form-control",@placeholder="0.00",@type="number" })
        @Html.ValidationMessageFor(x=>x.Discountlump)
        
    </div>
  <div class="form-group">
       @Html.Label("Allow Dependant Enrollee")
        @Html.CheckBoxFor(x=>x.AllowChildEnrollee)
      
        
    </div>
</div>
<div class="modal-footer">

    <button data-dismiss="modal" class="btn btn-default pull-left modal-close-btn" type="button">Cancel</button>
     <button class="btn btn-primary" type="submit" id="btnSave" >Save </button>
</div>

}

<script>

    $(function () {

        //Do validation for yourself.
        $('#btnSave').click(function (e) {

            $('#modal-container').modal('hide');
        });


    });
</script>



