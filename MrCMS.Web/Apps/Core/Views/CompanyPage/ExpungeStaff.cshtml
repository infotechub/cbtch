@model MrCMS.Web.Apps.Core.Entities.Staff

@{
    ViewBag.Title = "Expunge Staff";
}

<div class="modal-header">
    <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
    <h4 class="modal-title">Expunge staff</h4>
</div>

   @using (Html.BeginForm("ExpungeStaff","CompanyPage",FormMethod.Post,new {id="ExpungeStaffform" }))
            {            @Html.AntiForgeryToken()   

<div class="modal-body">
    <div class="alert alert-danger alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
        <h4><i class="icon fa fa-ban"></i>Alert!</h4>
        Are you sure you want to expunge this staff ?,All dependents will be expunged along with this staff.You cannot undo the processs. 
    </div>

@Html.HiddenFor(x=>x.Id)
    <table class="table table-condensed">
        <tbody>
            <tr>
                <th>Field</th>
                <th>Value</th>

            </tr>
            <tr>
                <td>Name</td>
                <td>@Html.DisplayFor(x=>x.StaffFullname)</td>
            </tr>
             <tr>
                <td>Expunge Note</td>
                <td> @Html.TextArea("ExpungeNote")</td>
            </tr>
     
        </tbody>
    </table>
  
</div>


  <div class="modal-footer">
    
      <button data-dismiss="modal" class="btn btn-default pull-left modal-close-btn" type="button">Cancel</button>
      <button class="btn btn-success" type="submit"  id="btnSave">Confirm </button>
  
  </div>
}
<script>

    $(function () {
        $('#btnSave').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
