@using MrCMS.Helpers
@model MrCMS.Web.Apps.Core.Entities.Benefit
@{
    ViewBag.Title = "Add new Benefit";
}
 

@using (Html.BeginForm("AddBenefit","CompanyPage",FormMethod.Post,new {@id="Benefitform"}))
    {
      
      @Html.AntiForgeryToken()
 <div class="modal-header">
     <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
     <h4 class="modal-title">Add new benefit </h4>
 </div>
<div class="modal-body">
    <div class="form-group">
        @Html.Label("Benefit Name")
@Html.TextBoxFor( x=>x.Name, new { @class = "form-control",@placeholder="Benefit Name" })
@Html.ValidationMessageFor(x=>x.Name)
        
    </div>


    <div class="form-group">
        @Html.Label("Benefit Category")
       @Html.DropDownListFor(x=>x.Benefitcategory,new SelectList(ViewBag.BenefitGroup, "Id", "Name"),new { @class = "form-control",@id="groupid"})
        @Html.ValidationMessageFor(x=>x.Benefitcategory)
        
    </div>
    <div class="form-group">
        @Html.Label("Benefit Description")
        @Html.TextBoxFor( x=>x.Description, new { @class = "form-control",@placeholder="Benefit Description" })
        @Html.ValidationMessageFor(x=>x.Description)
        
    </div>


   

    <div class="form-group">
        @Html.Label("Benefit Default Limit")
        @Html.TextAreaFor( x=>x.Benefitlimit, new { @class = "form-control",@placeholder="Benefit default Limit" })
        @Html.ValidationMessageFor(x=>x.Benefitlimit)
        
    </div>
 



</div>
<div class="modal-footer">

    <button data-dismiss="modal" class="btn btn-default pull-left modal-close-btn" type="button">Cancel</button>
    <button class="btn btn-primary" type="button" id="btnSave" onclick="addBenefit()">Save </button>
</div>

}

<script>



    $(function () {

        //Do validation for yourself.
        $('#btnSave').click(function (e) {

            $('#modal-container').modal('hide');

        });


    });


</script>



