@model MrCMS.Web.Apps.Core.Entities.Subscription

@{
    ViewBag.Title = "Terminate Subscription";
}

 <div class="modal-header">
     <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
     <h4 class="modal-title">Terminate subscription</h4>
 </div>
<div class="modal-body">
    <div class="alert alert-danger alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
        <h4><i class="icon fa fa-ban"></i>Alert!</h4>
The subscription is still active ,terminating it will end the subscription.This process cannot be reversed.
        Are you sure you want to terminate this subscription ?
    </div>
    <table class="table table-condensed">
        <tbody>
            <tr>
                <th>Field</th>
                <th>Value</th>

            </tr>
            <tr>
                <td>Subscription Code</td>
                <td>@Html.DisplayFor(x=>x.SubscriptionCode)</td>
            </tr>
      <tr>
                <td>Termination Note</td>
                <td>@Html.TextAreaFor(x=>x.TerminationNote)</td>
            </tr>
        </tbody>
    </table>

</div>


<div class="modal-footer">
    @using (Html.BeginForm("DeleteSubscription","CompnayPage",FormMethod.Post,new {@id="Subscriptionform"}))
            {
                @Html.AntiForgeryToken()
@Html.HiddenFor(x=>x.Id)
                <button data-dismiss="modal" class="btn btn-default pull-left modal-close-btn" type="button">Cancel</button>
    <button class="btn btn-success" type="button" onclick="TerminateSubscription()" id="btnSave">Confirm </button>
    }
</div>
<script>

    $(function () {
        $('#btnSave').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
