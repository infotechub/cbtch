
@using MrCMS.Helpers
@model MrCMS.Web.Apps.Core.Entities.TariffCategory 
@{
    ViewBag.Title = "Add tariff category";
}
 

@using (Html.BeginForm("AddCategory","TariffPage",FormMethod.Post,new {@id="categoryform"}))
    {
      
      @Html.AntiForgeryToken()
 <div class="modal-header">
     <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
     <h4 class="modal-title">Add New Tariff Category</h4>
 </div>
<div class="modal-body">
    <div class="form-group">
         @Html.Label("Category Name")
@Html.TextBoxFor( x=>x.Name, new { @class = "form-control",@placeholder="Category Name" })
@Html.ValidationMessageFor(x=>x.Name)
        
    </div>
 @Html.HiddenFor(x=>x.Type)
 <div class="form-group">
        @Html.Label("Category Description")
@Html.TextBoxFor( x=>x.Description, new { @class = "form-control",@placeholder="Category Description" })
@Html.ValidationMessageFor(x=>x.Description)
        
    </div>

</div>
        <div class="modal-footer">
            
            <button data-dismiss="modal" class="btn btn-default pull-left modal-close-btn" type="button">Cancel</button>
            <button class="btn btn-primary" type="button" id="btnSave" onclick="addCategory('@Model.Type')">Save </button>
        </div>

}

<script>

 

    $(function () {
        
//Do validation for yourself.
        $('#btnSave').click(function (e) {
           
            $('#modal-container').modal('hide');
          
        });
        
       
    });

  
</script>



