@using MrCMS.Helpers
@model MrCMS.Web.Apps.Core.Entities.ServiceTariff
@{
    ViewBag.Title = "Edit Service";
}
 

@using (Html.BeginForm("EditService","TariffPage",FormMethod.Post,new {@id="serviceform"}))
    {
       @Html.HiddenFor(x=>x.Id)
      @Html.AntiForgeryToken()
 <div class="modal-header">
     <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
     <h4 class="modal-title">Edit Service </h4>
 </div>
<div class="modal-body">
    <div class="form-group">
        @Html.Label("Service Name")
@Html.TextBoxFor( x=>x.Name, new { @class = "form-control",@placeholder="Service Name" })
@Html.ValidationMessageFor(x=>x.Name)
        
    </div>


   @*<div class="form-group">
        @Html.Label("Service Category")
       @Html.DropDownListFor(x=>x.GroupId,new SelectList(ViewBag.serviceGroup, "Id", "Name",Model.GroupId),new { @class = "form-control",@id="groupid"})
        @Html.ValidationMessageFor(x=>x.Description)
        
    </div>*@
    <div class="form-group">
        @Html.Label("Service Description")
        @Html.TextBoxFor( x=>x.Description, new { @class = "form-control",@placeholder="Service Description" })
        @Html.ValidationMessageFor(x=>x.Description)
        
    </div>


  <div class="form-group">
        @Html.Label("Unit")
        @Html.TextBoxFor( x=>x.Unit, new { @class = "form-control",@placeholder="Unit" })
        @Html.ValidationMessageFor(x=>x.Unit)
        
    </div>
    <div class="form-group">
        @Html.Label("Service Price")
        @Html.TextBox("serviceprice",(string)ViewBag.servpricestr, new { @class = "form-control",@placeholder="Service Price",@type="number" })
        @Html.ValidationMessageFor(x=>x.Price)
        
    </div>
 

    <div class="form-group">
        @Html.Label("Preauthorization Required ?")
@Html.CheckBoxFor( x=>x.PreauthorizationRequired, new { @class = "form-control" })
@Html.ValidationMessageFor(x=>x.PreauthorizationRequired)
        
    </div>

</div>
<div class="modal-footer">

    <button data-dismiss="modal" class="btn btn-default pull-left modal-close-btn" type="button">Cancel</button>
    <button class="btn btn-primary" type="button" id="btnSave" onclick="EditService()">Save </button>
</div>

}

<script>

   

    $(function () {

        //Do validation for yourself.
        $('#btnSave').click(function (e) {

            $('#modal-container').modal('hide');

        });


    });

    
</script>



